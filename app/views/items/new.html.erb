<%= form_for(@item) do |f|%>
      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name %><br>
      </div>
      <div class="input-field">
        <%= f.label :emoji %>
        <%= f.text_field :emoji %><br>
      </div>

      <div class="input-field">
        <%= f.label :price %>
        <%= f.text_field :price %><br>
      </div>

      <%= submit_tag %>
      <% end %>