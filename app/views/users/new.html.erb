<section class="signup">
  
  <h1>new user</h1>
  <%= form_for(@user) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.submit %>
  <% end %>

</section>
