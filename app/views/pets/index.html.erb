<body class='pets-index'>
  <section class='pets-list'>
    <h1>KITTY CITY EMPIRE</h1>
    <ol>
      <% @pets.each do |p| %>
       <li><%= link_to p.name, p %></li>
      <% end %>
    </ol>
  </section>

  <section class='pets-visit'>
    <h2>Visit these pretty kitties!</h2>
    new cat on the block: <%= link_to @new_cat.name, @new_cat %><br>
    pet me, purrrrease: <%= link_to @needs_love.name, @needs_love %><br>
    super surprise: <%= link_to @surprise_cat.name, @surprise_cat %>
  </section>
</body>
